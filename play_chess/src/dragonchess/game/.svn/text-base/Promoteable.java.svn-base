package dragonchess.game;

/**
 * The interface Promoteable defines all DragonChess Promoteable GamePieces.
 *
 * @author Group 4
 */
public interface Promoteable {

	/**
	 * Promote a GamePiece (Pawn) to 'toType.'
	 *
	 * @param toType
	 */
	public void promote(GamePieceType toType);

	/**
	 * Demote a GamePiece to a Pawn.
	 */
	public void demote();

}
