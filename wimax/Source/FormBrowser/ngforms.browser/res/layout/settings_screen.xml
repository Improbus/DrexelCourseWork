<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_height="fill_parent"
  android:layout_width="fill_parent">

  <LinearLayout android:id="@+id/LinearLayout03"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

      <TextView android:id="@+id/TextView03"
        android:layout_height="wrap_content"
        android:text="Network Settings" android:textSize="28dp" android:layout_width="fill_parent">
      </TextView>

      <!--Following line is horizontal bar --> 
      <View
	    android:background="#FF909090" 
	    android:layout_height="5dp"
	    android:layout_width="fill_parent"
	    android:layout_marginBottom="10dp"
	    android:fadingEdge="horizontal" />

  </LinearLayout>

  <LinearLayout android:id="@+id/LinearLayout01"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

      <TextView android:id="@+id/TextView01"
        android:layout_height="wrap_content"
        android:text="Hostname" android:textSize="24dp" android:layout_width="140dp">
      </TextView>

      <EditText android:layout_height="wrap_content"
        android:gravity="right" android:layout_width="fill_parent" android:id="@+id/HostNameEditText">
      </EditText>	

  </LinearLayout>

  <LinearLayout android:id="@+id/LinearLayout02"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
      android:id="@+id/TextView02"
      android:layout_height="wrap_content"
      android:text="Port" android:layout_width="140dp" android:textSize="24dp">
    </TextView>

    <EditText
      android:gravity="right"
      android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/PortEditText">
    </EditText>

  </LinearLayout>

  <!-- Allows button to be on the bottom -->
  <RelativeLayout android:id="@+id/RelativeLayout01"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <Button android:text="Apply"
      android:layout_alignParentRight="true"
	  android:id="@+id/ApplyButton"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content">
    </Button>

  </RelativeLayout>

</LinearLayout>
