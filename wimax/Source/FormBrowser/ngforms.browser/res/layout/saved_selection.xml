<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="@drawable/wallpaper">
    
    <ListView android:layout_width="fill_parent"
              android:id="@+id/savedFormsLayout"
              android:layout_height="wrap_content"
              android:layout_weight="1"/>
              
    <LinearLayout
		android:id="@+id/linlayoutButtons"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="0"
		>
		<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:id="@+id/pageblank4" android:text="          ">
		</TextView>
		
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
           android:id="@+id/search" android:drawableLeft="@drawable/search" android:background="@drawable/groundyellowbtn" android:text="Search     "/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:id="@+id/cancel" android:drawableLeft="@drawable/cancel" android:background="@drawable/groundyellowbtn" android:text=" Cancel     "/>
        <ListView
        	android:background="#3500ffff"
    	    android:layout_width="fill_parent"
            android:id="@+id/fileList"
            android:layout_height="wrap_content"
            android:layout_below="@id/search"
            android:layout_weight="1"/>
            
    </LinearLayout>
</LinearLayout>

